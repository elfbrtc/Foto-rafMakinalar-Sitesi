        <td><%= image_tag oyun.resim.url(:thumb) if oyun.resim? %> </td>
        <td><%= link_to 'Ä°ncele', oyun %></td>
        <td><%= link_to 'Duzenle', edit_oyun_path(oyun) %></td>
        <td><%= link_to 'Sil', oyun, method: :delete, data: { confirm: 'Emin misin?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

